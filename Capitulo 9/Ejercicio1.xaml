<Window x:Class="Capitulo8_9WPF.Capitulo_9.Ejercicio1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Capitulo8_9WPF.Capitulo_9"
        mc:Ignorable="d"
        Title="Ejercicio1" Height="450" Width="500">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="10">
            <Label Content="Codigo"></Label>
            <TextBox x:Name="codigotextBox"></TextBox>
            <Label Content="Nombre"></Label>
            <TextBox x:Name="nombreTextBox"></TextBox>

            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button x:Name="agregar" Content=" Agregar " Click="agregar_Click"></Button>
            </StackPanel>
            
        </StackPanel>
    </Grid>
</Window>
