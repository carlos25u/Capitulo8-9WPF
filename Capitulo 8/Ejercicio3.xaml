<Window x:Class="Capitulo8_9WPF.Capitulo_8.Ejercicio3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Capitulo8_9WPF.Capitulo_8"
        mc:Ignorable="d"
        Title="Ejercicio3" Height="450" Width="500">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="10,10,10,10">
            <Label Content="Fecha"></Label>
            
            <StackPanel Orientation="Horizontal">
                <DatePicker x:Name="fecha" Width="300"></DatePicker>
                <Button x:Name="obtenerFecha" Content=" Obtener " Margin="10,0,0,0" Click="obtenerFecha_Click" ></Button>
            </StackPanel>
            <Label Margin="0,10,0,0" x:Name="imprimirfecha"></Label>
        </StackPanel>
    </Grid>
</Window>
